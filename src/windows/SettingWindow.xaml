<Window x:Class="LiveCaptionsTranslator.windows.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="520" Width="720">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel>
                <!-- Existing settings UI above -->

                <GroupBox Header="Text-to-Speech (Edge TTS)" Margin="0,12,0,0">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="EnableTtsCheckBox" Content="Enable TTS" />

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Voice:" Width="140" VerticalAlignment="Center" />
                            <TextBox x:Name="TtsVoiceTextBox" Width="420" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Output device:" Width="140" VerticalAlignment="Center" />
                            <ComboBox x:Name="TtsOutputDeviceComboBox" Width="420" DisplayMemberPath="Name" SelectedValuePath="Id" />
                        </StackPanel>

                        <TextBlock Margin="0,8,0,0" Foreground="Gray" TextWrapping="Wrap">
                            TTS plays to the selected WASAPI render device. Leave blank to use system default.
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="SaveButton" Content="Save" Width="100" Margin="0,0,8,0" Click="SaveButton_Click" />
            <Button Content="Cancel" Width="100" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
